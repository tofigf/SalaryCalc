@using SalaryCalc.Models
@model List<Sale>

@{
    ViewBag.Title = "ImporteData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8 mb-4">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col">
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3>Import Edilmiş Satışlar</h3>
                                </div>
                                <div class="col-4 text-right">
                                    <a href="@Url.Action("getimport","sales")" class="btn btn-sm btn-primary toback"><i class="ni ni-bold-left"></i>Geri Qayıt</a>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Məhsulun  Adı</th>
                                        <th scope="col">Qiymət</th>
                                        <th scope="col">Sayı</th>
                                        <th scope="col">Vip</th>
                                        <th scope="col">Endirim</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{int i = 1;}

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("#.00")</td>
                                         <td>@item.Count</td>
                                        <td>@(item.Vip == true ? "Vip" : "Vip deyil")</td>
                                        <td>@(item.DisCount == true ? "Endirim var" : "Endirim yoxdu")</td>
                                        <td>
                                            <a href="javascript:void(0)" class="btn btn-sm btn-@(item.IsComfirmed ==true ?"success":"danger")">
                                                @(item.IsComfirmed == true ? "təsdiqlənib" : "təsdiqlənməyib")
                                            </a>

                                        </td>

                                        @*<td>
            <a href="@Url.Action("downloadimportedexcel","sales",new {id = item.Id })" class="btn btn-sm btn-info">Yüklə</a>
            <a onclick="return confirm('Əminsinizmi?')" href="@Url.Action("deleteimported","sales",new { id = item.Id })" class="btn btn-sm btn-danger ml-2">Sil</a>
            <a href="@Url.Action("importedata","sales",new {id = item.Id })" class="btn btn-sm btn-primary">Yüklənmişə Bax</a>
        </td>*@
                                    </tr>
                                        i++;
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

