                <div class="tab-content">
                    @foreach (var m in Model.Postions)
                    {
                        <div id="tabnumber-@m.Id" class="tab-pane @(b == 1 ? "active" : "")">

                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
