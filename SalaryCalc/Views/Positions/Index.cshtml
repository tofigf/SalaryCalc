@using SalaryCalc.Models
@model List<Postion>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <h1 class="text-center mt-5">Vəzifələr</h1>
        <div class="row">

            <div class="col-md-4">
                <form id="myForm" method="post" action="@Url.Action("create","positions")">
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <input type="hidden" name="Id" id="Id" />
                        <label for="Name">Adı</label>
                        <input type="text" class="form-control" name="Name" id="Name" placeholder="Adı">
                    </div>

                    <button type="submit" class="btn btn-primary mt-4">Sign in</button>
                </form>
            </div>
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Adı</th>
                            <th scope="col">Tənzimləmə</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td><a href="@Url.Action("edit","positions",new { id = item.Id })" class="editposition">Duzelis</a>
                                <a onclick="return confirm('Əminsinizmi?')" href="@Url.Action("delete","positions",new { id = item.Id })">Sil</a>
                            </td>

                        </tr>
                        i ++;
                                }


                        </tbody>
                    </table>
              
            </div>
        </div>
    </div>
   
